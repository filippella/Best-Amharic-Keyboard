<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#7a0222"
                android:centerColor="#9e032e"
                android:endColor="#cc1c4d"
                android:type="linear" />
            <corners android:radius="0dp" />
            <stroke android:color="@color/black" android:width="0.5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#f5d2db"
                android:centerColor="#eba4b8"
                android:endColor="#cc1c4d"
                android:type="linear" />
            <corners android:radius="0dp" />
            <stroke android:color="@color/black" android:width="0.5dp" />
        </shape>
    </item>
</selector>
