<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/ethio_yellow" android:endColor="@color/ethio_red" android:startColor="@color/ethio_green" android:type="linear" />
            <stroke android:width="0.5dp" android:color="@color/black" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#f2f279" android:endColor="#f78f8f" android:startColor="#3cea93" android:type="linear" />
            <stroke android:width="0.5dp" android:color="@color/black" />
        </shape>
    </item>
</selector>